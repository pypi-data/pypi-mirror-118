#!python

import argparse
from slg_ff_helpers import transaction_trends

def get_arguments():
    parser = argparse.ArgumentParser()

    # integer value
    parser.add_argument('-a', '--add_threshold', default=100, type=int,
                        help="How many adds need to occur before we notify")

    parser.add_argument('-ip', '--ignore_positions', default='', type=str,
                        help="What positions should this ignore (comma separated string)")

    args = parser.parse_args()

    return args

if __name__ == "__main__":
    args = get_arguments()
    transaction_trends.main(args.add_threshold, args.ignore_positions)
