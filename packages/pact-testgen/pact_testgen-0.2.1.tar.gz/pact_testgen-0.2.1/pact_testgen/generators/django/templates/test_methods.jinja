    {% for arg in args %}
    def {{arg.name}}(self):
        raw_actual_response = self.client.generic(
            "{{arg.request.method}}",
            "{{arg.request.path}}",
            {% if arg.request.data %}json.dumps({{arg.request.data}}),{% endif %}
            content_type="{{arg.request.content_type}}"
        )
        actual = Response.from_django_response(raw_actual_response)

        raw_expected_response = {{arg.expectation}}

        result = verify_response("{{consumer_name}}", "{{provider_name}}", raw_expected_response, actual)
        result.assert_success()
    {% endfor %}
