{
  "definitions": {
    "InvenioRecord": {
      "title": "Internal Invenio record fields v1.0.0",
      "type": "object",
      "properties": {
        "$schema": {
          "description": "JSONSchema id of the record",
          "type": "string"
        },
        "InvenioID": {
          "description": "Primary Invenio record identifier.",
          "type": "string"
        },
        "_bucket": {
          "description": "UUID of the internal files deposit bucket.",
          "type": "string"
        },
        "oarepo:submitter": {
          "description": "User that created/submitted the repository record for the resource",
          "type": "string",
          "default": "Current authenticated user's e-mail"
        },
        "_files": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Describes information needed for files in records.",
            "additionalProperties": true,
            "properties": {
              "key": {
                "description": "Key (filename) of the file.",
                "type": "string"
              },
              "file_id": {
                "description": "UUID of the FileInstance object.",
                "type": "string"
              },
              "bucket": {
                "description": "UUID of the bucket to which this file is assigned.",
                "type": "string"
              },
              "checksum": {
                "description": "Checksum the file. Starts with '<algorithm>:' prefix, e.g.: 'md5:1234abcd...'",
                "type": "string"
              },
              "size": {
                "description": "Size of the file in bytes.",
                "type": "integer"
              },
              "version_id": {
                "description": "UUID of the ObjectVersion object.",
                "type": "string"
              },
              "mime_type": {
                "description": "File MIMEType.",
                "type": "string"
              },
              "url": {
                "description": "File URL in Invenio.",
                "type": "string",
                "format": "URL"
              },
              "object_type": {
                "$comment": "pro pilot automaticky dataset",
                "$comment2": "přidáno pro lepší export do openaire",
                "type": "string",
                "enum": [
                  "fulltext",
                  "dataset",
                  "software",
                  "other"
                ]
              }
            }
          }
        }
      },
      "required": [
        "$schema",
        "InvenioID"
      ]
    }
  }
}
